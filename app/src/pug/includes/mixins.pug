//- article__paragraph
mixin article__paragraph
    p.article__paragraph
      if block
      block

mixin article__span
  span.article__span
    block

//- article__link
mixin article__link(url)
  a.article__link(href= url)
    block

mixin article__strong(text)
  strong.article__strong= text

//- article__list
mixin article__list
  ul.article__list
    block

//- article__list-item
mixin article__list-item(text)
  li.article__list-item!= text

//- article__note
mixin article__note(text)
  aside.article__note
    +article__paragraph
      +article__strong('Примечание.')
        if(text)
          |  !{text}
    block

