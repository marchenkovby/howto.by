//- article
mixin article
  article.article
    block

//- article__header
mixin article__header
  header.article__header
    block

//- article__heading
mixin article__heading(text, mods)
  -
    // list modificators
    var allMods = ''
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',')
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' article__heading--' + modsList[i].trim()
      }
    }

  case modsList[0]
    when 'level-1': h1(class='article__heading' + allMods)&attributes(attributes)!= text
    when 'level-2': h2(class='article__heading' + allMods)&attributes(attributes)!= text
    when 'level-3': h3(class='article__heading' + allMods)&attributes(attributes)!= text
    when 'level-4': h4(class='article__heading' + allMods)&attributes(attributes)!= text
    when 'level-5': h5(class='article__heading' + allMods)&attributes(attributes)!= text
    when 'level-6': h6(class='article__heading' + allMods)&attributes(attributes)!= text
    default: h1(class='article__heading' + allMods)&attributes(attributes)!= text

//- article__img
mixin article__img(imageFolder, imageName, caption)
  figure.article__figure
    img.article__img(src='/img/' + imageFolder + '/' + imageName, alt=caption)
    block

//- article__img-caption
mixin article__img-caption(text)
  figcaption.article__img-caption!= text

//- article__desk
mixin article__desk(text)
  p.article__desk!= text

//- article__header
mixin article__header
  header.article__header
    block

//- article__content
mixin article__content
  div.article__content
    block

//- article__paragraph
